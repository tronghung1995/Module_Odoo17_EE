<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
    <t t-name="module_javascript.ChartComponent" owl="1">

        <div class="container-fluid vh-95 d-flex flex-column p-0 m-0" style="overflow: hidden;">
            <!-- Biểu đồ tròn (30%) -->
            <div class="row flex-shrink-0" style="height: 30%; min-height: 200px;">
                <div class="col-12 h-100 p-3">
                    <canvas t-ref="chartCanvas" style="display: block; height: 100%; width: 100%; min-height: 180px;"/>
                </div>
            </div>

            <!-- 2 biểu đồ cột (70%) -->
            <div class="row g-2 m-0 flex-grow-1" style="min-height: 400px; overflow-y: auto;">
                <div class="col-12 col-md-6 h-100 p-2">
                    <div style="height: 100%; min-height: 400px;">
                        <canvas t-ref="chartCanvasDone" style="display: block; height: 100%; width: 100%;"/>
                    </div>
                </div>
                <div class="col-12 col-md-6 h-100 p-2">
                    <div style="height: 100%; min-height: 400px;">
                        <canvas t-ref="chartCanvasNotDone" style="display: block; height: 100%; width: 100%;"/>
                    </div>
                </div>
            </div>
        </div>

    </t>
</templates>