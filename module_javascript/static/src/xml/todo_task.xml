                                    Name
                                    <t t-if="this.sortField === 'name'">
                                        <i t-att-class="'fa ' + (this.sortAsc ? 'fa-sort-up' : 'fa-sort-down')" style="margin-left: 5px;"></i>
                                    </t>
                                </th>

                                <!-- Color -->
                                <th class="text-nowrap" style="color: #ffffff; background-color: #714B67;">Color</th>

                                <!-- Description -->
                                <th class="text-nowrap" style="color: #ffffff; background-color: #714B67; cursor: pointer;"
                                    t-on-click="() => this.sortTasksBy('description')">
                                    Description
                                    <t t-if="this.sortField === 'description'">
                                        <i t-att-class="'fa ' + (this.sortAsc ? 'fa-sort-up' : 'fa-sort-down')" style="margin-left: 5px;"></i>
                                    </t>
                                </th>

                                <!-- Done -->
                                <th class="text-nowrap" style="color: #ffffff; background-color: #714B67; cursor: pointer;"
                                    t-on-click="() => this.sortTasksBy('is_done')">
                                    Done
                                    <t t-if="this.sortField === 'is_done'">
                                        <i t-att-class="'fa ' + (this.sortAsc ? 'fa-sort-up' : 'fa-sort-down')" style="margin-left: 5px;"></i>
                                    </t>
                                </th>

                                <!-- Action -->
                                <th class="text-nowrap" style="color: #ffffff; background-color: #714B67;"></th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr t-foreach="state.taskList" t-as="task" t-key="task.id">
                                <td>
                                    <span t-esc="task.name" />
                                </td>
                                <td>
                                    <input type='color' class="form-control form-control-color" id="exampleColorInput" t-att-value="task.color" t-on-change="(e)=>this.updateColor(e,task)"/>
                                </td>
                                <td>
                                    <span t-esc="task.description" />
                                </td>
                                <td>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" t-att-id="task.id" t-att-checked="task.is_done" t-on-change="(e)=>this.updateState(e,task)"/>
                                    </div>
                                </td>
                                <td>
                                    <button class="btn btn-success me-2" data-bs-toggle="modal" data-bs-target="#exampleModal" t-on-click="()=>this.editTask(task)">Edit</button>
                                    <button class="btn btn-danger" t-on-click="()=>this.deleteTask(task)">Delete</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </t>

</template>
